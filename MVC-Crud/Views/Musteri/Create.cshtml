@model Musteri

@{
    ViewBag.Title = "Yeni Müşteri Ekle";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Ad:</label>
        <input type="text" asp-for="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Soyad:</label>
        <input type="text" asp-for="Soyad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input type="text" asp-for="Email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>