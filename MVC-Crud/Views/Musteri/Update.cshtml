@model Musteri

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="MusteriId" />
    <div class="form-group">
        <label>Ad:</label>
        <input type="text" asp-for="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Soyad:</label>
        <input type="text" asp-for="Soyad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input type="text" asp-for="Email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>