@model MVCListeCRUD.Models.Personel

@{
    ViewBag.Title = "Personel Güncelle";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Guncelle" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Ad:</label>
        <input type="text" asp-for="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Soyad:</label>
        <input type="text" asp-for="Soyad" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>
