@model List<MVCListeCRUD.Models.Personel>

@{
    ViewBag.Title = "Personel Listesi";
}

<h2>@ViewBag.Title</h2>

<a asp-action="Ekle">Yeni Personel Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr>
                <td>@personel.Id</td>
                <td>@personel.Ad</td>
                <td>@personel.Soyad</td>
                <td>
                    <a asp-action="Guncelle" asp-route-id="@personel.Id">Güncelle</a> |
                    <a asp-action="Sil" asp-route-id="@personel.Id" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
